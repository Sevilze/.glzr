{
  "$schema": "https://github.com/glzr-io/zebar/raw/v2.1.0/resources/widget-schema.json",
  "htmlPath": "./bottom-bar.html",
  "zOrder": "top_most",
  "shownInTaskbar": false,
  "focused": false,
  "resizable": false,
  "transparent": false,
  "caching": {
    "defaultDuration": 604800,
    "rules": []
  },
  "privileges": {
    "shellCommands": []
  },
  "presets": [
    {
      "name": "default",
      "anchor": "bottom_left",
      "offsetX": "0px",
      "offsetY": "0px",
      "width": "100%",
      "height": "46px",
      "monitorSelection": {
        "type": "all"
      },
      "dockToEdge": {
        "enabled": true,
        "edge": "bottom",
        "windowMargin": "0px"
      }
    }
  ]
}
